<!DOCTYPE html>
<html>
  <head>
    <title><%= "#{@restaurant.name} - " if @restaurant %>Palatable</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="nav">
      <div id="top-logo">
        <%= link_to "palatable", root_path, class: 'logo' %>
      </div>
      <div class="session_controls">
        <%= button_to "Login", login_path if !logged_in? %>
        <%= button_to "Logout", logout_path, method: :post if logged_in? %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
