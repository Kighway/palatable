<style>
  .header {
    background-image: url("<%= @restaurant.photo %>");
  }
</style>


<div class="header">
  <h1><%= @restaurant.name %></h1>
</div>

<h3>
<%= link_to "Search Again", root_path%>
</h3>

<div class="socials">
  <% socials = {phone: @restaurant.phone, facebook: @restaurant.facebook, twitter: @restaurant.twitter, globe: @restaurant.url}.compact %>
  <% socials.each do |k, v| %>
  <a href="
    <% case k %>
    <% when :phone %>
    <%= "tel:#{v.tr('^0-9','')}" %>
    <% when :facebook %>
    <%= "https://facebook.com/#{v}" %>
    <% when :twitter %>
    <%= "https://twitter.com/#{v}" %>
    <% when :globe %>
    <%= v %>
    <% end %>
  ">
    <i class="fa fa-<%= k.to_s %> fa-lg"></i>
  </a>
  <% end %>
</div>

<% if @user && @user_review %>
  <%= link_to 'Edit your review', edit_review_path(@user_review.id) %>
<% else %>
  <%= link_to 'Create a new review', new_review_path(@restaurant.id) %>
<% end %>

<h4 id="review_list_header">Reviews list</h4>
<% @restaurant.reviews.each do |review| %>
<div class="review">
  <div class="user-info">
    <%= link_to review.user.name, review.user %>
  </div>
  <section class="review-content">
      <section class="ratings">
        <p class="food-rating">
          <%= review.food_rating %> — FOOD
        </p>
        <p class="service-rating">
          <%= review.service_rating %> — SERVICE
        </p>
        <p class="environment-rating">
          <%= review.environment_rating %> — ENVIRONMENT
        </p>
      </section>
      <section class="review-text">
        <%= review.content %>
    </section>
    </section>
  </div>
<% end %>
