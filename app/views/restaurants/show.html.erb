<style>
  .header {
    background-image: url("<%= @restaurant.photo %>");
  }
</style>

<div class="header">
  <h1><%= @restaurant.name %></h1>
</div>

<div class="socials">
  <% socials = {phone: @restaurant.phone, facebook: @restaurant.facebook, twitter: @restaurant.twitter, globe: @restaurant.url}.compact %>
  <% socials.each do |k, v| %>
  <a href="
    <% case k %>
    <% when :phone %>
    <%= "tel:#{v.tr('^0-9','')}" %>
    <% when :facebook %>
    <%= "https://facebook.com/#{v}" %>
    <% when :twitter %>
    <%= "https://twitter.com/#{v}" %>
    <% when :globe %>
    <%= v %>
    <% end %>
  ">
    <i class="fa fa-<%= k.to_s %> fa-lg"></i>
  </a>
  <% end %>
</div>
<%= link_to 'Create a new review', new_review_path(@restaurant.id) %>

<h4 id="review_list_header">Reviews list</h4>
<ol>
<% @restaurant.reviews.each do |review| %>
  <li>
  <strong>
    <%= review.user.name %> said:
  </strong>
  <%= review.content %>
    <% if @user.id == review.user.id %>
      <%= form_tag edit_review_path, method: 'get' do %>
        <%= submit_tag "Edit this Review" %>
      <% end %>
    <% end %>
  </li>
<% end %>
</ol>
